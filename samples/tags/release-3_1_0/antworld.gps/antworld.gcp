antworld();

function antworld() {
	until(stop150) do { main(); }
}

function main() {
	alap { reproduce; }
	turn();
	try { evaporate; }
	if( on_edge ) { grow(); }
	end_turn;
}

function turn() {
	try { drop_food; }
	try { pickup_food; }
	try { move_home; }
	alap { move_search; }
	alap { move_random; }
}

function grow() {
	expand_start;
	alap{ expand_normal | expand_axis; }
	expand_end;
	put_food;
	cleanup_index;
}

